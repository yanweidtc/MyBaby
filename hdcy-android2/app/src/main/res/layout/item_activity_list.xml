<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fl_item_activity_list"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/transparent_black_60"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_activity_background"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:alpha="0.7"
            android:src="@mipmap/ic_launcher" />

    </FrameLayout>

    <TextView
        android:id="@+id/tv_activity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="70dp"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:text="主题名称"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/tv_activity_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:text="haha"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@color/transparent_black_50"
            android:layout_weight="1" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="130dp"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/tv_activity_daojishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:textColor="#FFFFFF"
            android:text="距离活动报名截止时间"
            android:textSize="14sp" />
    <cn.iwgang.countdownview.CountdownView
        android:id="@+id/CV_activity_time"
        android:layout_width="wrap_content"
        android:padding="2dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        app:isHideTimeBackground="true"
        app:isShowHour="true"
        app:isShowMinute="true"
        app:isShowSecond="true"
        app:suffixHour="时"
        app:suffixMinute="分"
        app:suffixSecond="秒"
        app:suffixTextColor="@color/white"
        app:timeTextColor="@color/white"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_activity_status"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="left"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:alpha="0.5"
        android:src="@mipmap/icon_activity_status"
        android:visibility="gone" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="40dp"
        android:alpha="0.7"
        android:src="@mipmap/icon_activity_logo" />


</FrameLayout>
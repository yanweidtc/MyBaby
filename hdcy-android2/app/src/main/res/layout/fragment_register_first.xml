<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@mipmap/register_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingTop="12dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_arrow_back_white_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="100dp"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="260dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="180dp"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_rg_nickname"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="请输入用户名"
                android:textSize="15sp"
                android:background="@color/white"
                android:layout_marginLeft="12dp"
                android:textColor="#494949"
                android:textColorHint="#494949" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/main_line" />

            <LinearLayout
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="性別"
                android:textSize="15sp"
                android:textColor="#494949"
                android:textColorHint="#494949" />
                <LinearLayout
                    android:id="@+id/ll_rg_sex_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_rg_sex1"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="100dp"
                    android:text="女"
                    android:textColor="#9B9B9B"
                    android:background="@drawable/sex_default_button"
                    android:layout_gravity="center"
                    />

                <Button
                    android:layout_marginLeft="-10dp"
                    android:id="@+id/bt_rg_sex2"
                    android:layout_width="50dp"
                    android:layout_height="32dp"
                    android:text="男"
                    android:textColor="@color/white"
                    android:background="@drawable/sex_pressed_button"/>
                    </LinearLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/main_line" />

            <LinearLayout
                android:id="@+id/ll_rg_city"
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_rg_city"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="center"
                    android:text="地区"
                    android:textSize="15sp"
                    android:textColor="#494949"
                    android:textColorHint="#494949" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginLeft="140dp"
                    android:gravity="center"
                    android:text="请选择"
                    android:textSize="15sp"
                    android:alpha="0.7"
                    android:textColor="#494949"
                    android:textColorHint="#494949"
                    android:id="@+id/textView2" />
            </LinearLayout>


        </LinearLayout>
        <Button
            android:id="@+id/bt_rg_submit"
            android:layout_width="260dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:background="@drawable/phone_shape"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginLeft="70dp"
                android:textSize="12sp"
                android:text="点击下一步,表示同意"
                android:id="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/blue"
                android:text="《用户协议》"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="1"
                android:textColor="@color/white"
                android:background="@drawable/rg_transit_button"
                 />
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="2"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:background="@drawable/rg_transit_unselect_button"
                />
            <Button
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="3"
                android:layout_marginLeft="15dp"
                android:textColor="@color/white"
                android:background="@drawable/rg_transit_unselect_button"
                />
        </LinearLayout>


    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/splash_five_bg"
        android:visibility="invisible"
        app:x_in="1"
        app:x_out="1">

        <ImageView
            android:id="@+id/iv_0"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65dp"
            android:src="@drawable/font_four_bg"
           />

        <ImageView
            android:id="@+id/iv_1"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:src="@drawable/font_four_title"
            />


        <ImageView
            android:id="@+id/iv_2"
            android:layout_width="match_parent"
            android:layout_height="20dp"

            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="112dp"
            android:src="@drawable/font_four_desc"
           />


        <ImageView
            android:id="@+id/splash_four_p"
            android:layout_width="248dp"
            android:layout_height="310dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="62dp"
            android:layout_marginLeft="65dp"
            android:background="@drawable/splash_content_player"
           />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/view_page_5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:x_in="1"
        app:x_out="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/splash_five_tag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0000000"
        android:orientation="vertical"

        app:x_in="1"
        app:x_out="1">
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_logo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        app:x_in="1"
        app:x_out="1">

        <ImageView
            android:id="@+id/five_logo"
            android:layout_width="match_parent"
            android:layout_height="115dp"

            android:layout_marginTop="100dp"
            android:src="@drawable/splash_five_logo" />

        <ImageView
            android:id="@+id/five_desc"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="00dp"
            android:src="@drawable/splash_five_desc" />


        <TextView
            android:id="@+id/five_btn"
            android:layout_width="140dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:layout_marginTop="180dp"
            android:background="@drawable/bg_btn"
            android:gravity="center"
            android:text="立即体验"
            android:textColor="#fff"
            android:textSize="20sp"

            />

    </LinearLayout>

</FrameLayout>